{
  // ============================================================
  // ⚠️ 仅结构性配置 - 请勿在此添加 paths 或其他编译选项
  // 所有配置统一在 tsconfig.json 中管理
  // ============================================================
  "extends": ["@electron-toolkit/tsconfig/tsconfig.web.json", "./tsconfig.json"],
  "include": [
    "apps/client/src/env.d.ts",
    "apps/client/src/**/*",
    "apps/client/src/**/*.vue",
    "apps/shared/**/*",
    "apps/electron/preload/*.d.ts",
    "public/**/*"
  ],
  "compilerOptions": {
    "composite": true
  }
}
